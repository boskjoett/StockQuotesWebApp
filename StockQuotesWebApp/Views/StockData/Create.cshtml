@model StockQuotesWebApp.Models.StockApiRequest

@{
    ViewData["Title"] = "Stock Data Query";
}

<h2>Stock Data Query</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="LoadData">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StockId" class="control-label"></label>
                <input asp-for="StockId" class="form-control" />
                <span asp-validation-for="StockId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockExchange" class="control-label"></label>
                <input asp-for="StockExchange" class="form-control" />
                <span asp-validation-for="StockExchange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FromDate" class="control-label"></label>
                <input asp-for="FromDate" class="form-control" />
                <span asp-validation-for="FromDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDate" class="control-label"></label>
                <input asp-for="ToDate" class="form-control" />
                <span asp-validation-for="ToDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Load" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
